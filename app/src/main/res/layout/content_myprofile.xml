<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home"
    tools:showIn="@layout/app_bar_myprofile">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/borderheader"
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:id="@+id/ImageUser"
            android:background="@drawable/borderheader"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_user" />

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/txtgetname"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Name Is a" />
    </LinearLayout>
    <TextView
        android:background="@drawable/bordermessage"
        android:layout_marginTop="200dp"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:paddingLeft="25dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="130dp"
        android:text="Welcome" />
    <LinearLayout
        android:layout_marginTop="230dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imageemail"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_email" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/txtgeteemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Email Is a " />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="270dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/email"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_point" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/txtgetpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Points Is a " />
        <TextView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:id="@+id/txtlatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <EditText
            android:layout_marginTop="120dp"
            android:layout_marginLeft="-170dp"
            android:id="@+id/editPhone"
            android:layout_width="wrap_content"
            android:hint="Enter Number Phone"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>
        <Button
            android:layout_marginTop="280dp"
            android:layout_marginLeft="-220dp"
            android:textSize="30dp"
            android:background="@color/btnSignActive"
            android:id="@+id/sendSMS"
            android:text="Submit LOCATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="470dp"
        android:orientation="vertical"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <Button
            android:background="#DC143C"
            android:id="@+id/btnout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="LogOut" />
    </LinearLayout>
</RelativeLayout>